<Window x:Class="DigitalClockSystemTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalClockSystemTimer"
        mc:Ignorable="d"
            Title="Digital Clock" Height="169" Width="297" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Height="42" Margin="18,21,0,0" Name="digitalClock" VerticalAlignment="Top" HorizontalAlignment="Left" Width="247" IsReadOnly="True" FontSize="38" FontFamily="Courier New" TextAlignment="Center" >00:00:00</TextBox>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Button  Margin="20"   Name="start" Width="75" Height="23" VerticalAlignment="Top" Click="startClick">Start</Button>
            <Button  Margin="20"    Name="stop" Width="75" Height="23" VerticalAlignment="Top" Click="stopClick">Stop</Button>
        </StackPanel>
    </Grid>
</Window>
