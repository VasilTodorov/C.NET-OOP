<Window x:Class="Bubbles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bubbles"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"  Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="379*"/>
        </Grid.RowDefinitions>
        <Button x:Name="startButton" Content="Start the game" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="98" Click="ButtonClicked" Height="20"/>
        <Canvas x:Name="area" HorizontalAlignment="Left" Height="359" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="753"/>

    </Grid>
</Window>
