<Window x:Class="Patterns.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Asynchronous models and patterns" Height="300" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Button Margin="10"
                Grid.Row="0" 
                Content="Sync over async"
                Click="SyncOverAsyncClicked"
                />

        <Button Margin="10"
                Grid.Row="1" 
                Content="Async Event Pattern"
                Click="AsyncEventClicked"
                />

        <Button Margin="10"
                Grid.Row="2" 
                Content="Async Model Binding"
                Click="AsyncModelClicked"
                />

        <Button Margin="10"
                Grid.Row="3" 
                Content="Async Pipeline"
                Click="AsyncPipelineClicked"
                />
    </Grid>
</Window>
