<Window x:Class="AsyncAwait.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Async / Await Sample" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button Grid.Row="0" 
                Name="Button1"
                Content="Running sequentially" 
                Click="RunSequentially"
                Margin="20" />

        <Button Grid.Row="1" 
                Name="Button2"
                Content="Async with tasks" 
                Click="RunAsyncTask"
                Margin="20" />

        <Button Grid.Row="2" 
                Name="Button3"
                Content="Async and await" 
                Click="RunAsyncAwait"
                Margin="20" />
    </Grid>
</Window>
