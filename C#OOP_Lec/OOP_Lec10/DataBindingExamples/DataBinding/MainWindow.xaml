<Window x:Class="DataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple data binding" Height="167" Width="236">
    <StackPanel Margin="8" >
        <Label Content="Things my dog can do:"/>
        <CheckBox Content="Sit"   IsChecked="{Binding CanSit}"   Margin="0,1,0,0"/>
        <CheckBox Content="Stay"  IsChecked="{Binding CanStay}"  Margin="0,1,0,0"/>
        <CheckBox Content="Fetch" IsChecked="{Binding CanFetch}" Margin="0,1,0,0"/>
        <Button Content="Test" Click="Test_Click" Margin="10,5,10,0" VerticalAlignment="Top"/>
        <TextBlock Text="Binding Checkbox IsChecked property to simple C# Properties" TextWrapping="Wrap" Width="202"/>
    </StackPanel>
</Window>
