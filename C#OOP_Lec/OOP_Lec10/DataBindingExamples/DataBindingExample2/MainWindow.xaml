<Window x:Class="DataBindingExample2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Data binding example 2" Height="300" Width="300"  >
    <Grid  >
        <StackPanel >
            <TextBox   x:Name="TxtBox1" Text="Hello, databinding" />
            <TextBox   x:Name="TxtBox2" Text="{Binding Text,  ElementName=TxtBox1}" />
            <TextBox   x:Name="TxtBox3"  />
        </StackPanel>
    </Grid>
</Window>